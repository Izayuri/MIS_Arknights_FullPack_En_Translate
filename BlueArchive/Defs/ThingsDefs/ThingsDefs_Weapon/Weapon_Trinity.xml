<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="AK_WeaponBase_Trinity">
		<defName>AK_Weapon_Ui</defName>
		<label>音量抑制器</label>
		<graphicData>
			<texPath>Things/BA_Students/Weapon/Trinity/UiW</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<description>周围噪音变大时，忧使用的狙击步枪。\n正如其名，能让人闭嘴。</description>
		<statBases>
			<AccuracyTouch>0.65</AccuracyTouch>
			<AccuracyShort>0.9</AccuracyShort>
			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>0.9</AccuracyLong>
			<RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
			<!--后摇-->
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>AK_Bullet_Ui</defaultProjectile>
				<ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
				<warmupTime>2.7</warmupTime>
				<!--前摇-->
				<range>45</range>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<soundCast>AK_Sound_Weapon_GeneralPistol</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<noiseRadius>3</noiseRadius>
			</li>
		</verbs>
		<tools Inherit = "false">
			<li>
				<label>枪托猛砸</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>32</power>
				<cooldownTime>2.8</cooldownTime>
			</li>
			<li>
				<label>踢击</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>20</power>
				<cooldownTime>1.2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="AK_BulletBase_Bow">
		<defName>AK_Bullet_Ui</defName>
		<label>瞄准射击</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Bullet</thingClass>
		<projectile>
			<damageDef>Bullet</damageDef>
			<!--伤害类型-->
			<damageAmountBase>40</damageAmountBase>
			<armorPenetrationBase>0.7</armorPenetrationBase>
			<stoppingPower>3</stoppingPower>
			<speed>50</speed>
			<soundExplode>ThumpCannon_Impact</soundExplode>
			<!--爆炸音效-->
		</projectile>
	</ThingDef>


</Defs>