<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BA_WeaponBase_Shanhaijing">
		<defName>BA_Weapon_Kisaki</defName>
		<label>知己知彼</label>
		<graphicData>
			<texPath>Things/BA_Students/Weapon/Shanhaijing/KisakiW</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<description>妃咲喜欢用的冲锋枪。她认为，知己知彼，才能开始一切行动。</description>
		<statBases>
			<AccuracyTouch>0.85</AccuracyTouch>
			<AccuracyShort>1</AccuracyShort>
			<AccuracyMedium>0.9</AccuracyMedium>
			<AccuracyLong>0.8</AccuracyLong>
			<RangedWeapon_Cooldown>0.7</RangedWeapon_Cooldown>
			<!--后摇-->
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>BA_Bullet_Kisaki</defaultProjectile>
				<ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
				<warmupTime>2.9</warmupTime>
				<!--前摇-->
				<range>42</range>
                <burstShotCount>6</burstShotCount>
                <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<soundCast>BA_Sound_Weapon_GeneralPistol</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<noiseRadius>3</noiseRadius>
			</li>
		</verbs>
		<tools Inherit="false">
			<li>
				<label>枪托猛砸</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>32</power>
				<cooldownTime>2.8</cooldownTime>
			</li>
			<li>
				<label>踢</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>20</power>
				<cooldownTime>1.2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="BA_BulletBase_Bow">
		<defName>BA_Bullet_Kisaki</defName>
		<label>冲锋射击</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Bullet</thingClass>
		<projectile>
			<damageDef>Bullet</damageDef>
			<!--伤害类型-->
			<damageAmountBase>45</damageAmountBase>
			<armorPenetrationBase>1.12</armorPenetrationBase>
			<stoppingPower>3</stoppingPower>
			<speed>50</speed>
			<soundExplode>ThumpCannon_Impact</soundExplode>
			<!--爆炸音效-->
		</projectile>
	</ThingDef>

