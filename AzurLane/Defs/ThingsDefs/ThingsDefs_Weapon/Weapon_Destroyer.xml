        </graphicData>
        <tools Inherit = "false">
            <li>
                <label>剑捅</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>21</power>
                <cooldownTime>6</cooldownTime>
            </li>
            <li>
                <label>剑柄猛砸</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>20</power>
                <cooldownTime>6.8</cooldownTime>
            </li>
            <li>
                <label>剑刺</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>26</power>
                <cooldownTime>7</cooldownTime>
            </li>
            <li>
                <label>剑劈</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>26</power>
                <cooldownTime>7</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="AK_DLL.Ext_WeaponwieldGraphics">
                <alterGraphics>
                    <texPath>Things/LMA_Ships/Weapon/Destroyer/LemalinW</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>2.2</drawSize>
                    <drawOffset>(0,0,0.3)</drawOffset>
                </alterGraphics>
            </li>
        </modExtensions>
    </ThingDef>

</Defs>