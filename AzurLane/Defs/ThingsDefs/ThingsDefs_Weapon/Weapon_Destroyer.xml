<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="LMA_WeaponBase_Destroyer">
        <defName>LMA_Weapon_Javelin</defName>
        <label>标枪的枪</label>
        <!-- <description></description> -->
        <graphicData>
            <texPath>Things/LMA_Ships/Weapon/Destroyer/JavelinW</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tools Inherit = "false">
            <li>
                <label>枪尖捅</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>13</power>
                <cooldownTime>3</cooldownTime>
            </li>
            <li>
                <label>枪头猛击</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>15</power>
                <cooldownTime>6</cooldownTime>
                <extraMeleeDamages>
                    <li>
                        <def>Stun</def>
                        <amount>10</amount>
                    </li>
                </extraMeleeDamages>
            </li>
            <li>
                <label>枪尖突刺</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>25</power>
                <cooldownTime>8</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="AK_DLL.Ext_WeaponwieldGraphics">
                <alterGraphics>
                    <texPath>Things/LMA_Ships/Weapon/Destroyer/JavelinW</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>2.2</drawSize>
                    <drawOffset>(0,0,0.3)</drawOffset>
                </alterGraphics>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="LMA_WeaponBase_Destroyer">
