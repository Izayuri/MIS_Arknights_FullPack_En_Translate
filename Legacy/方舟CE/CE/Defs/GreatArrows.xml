	<ThingDef ParentName="BaseGreatArrowProjectile">
		<defName>Projectile_AKGreatArrow_Venom</defName>
		<label>arrow (venom)</label>
		<graphicData>
			<texPath>Things/Projectile/Arrows/Arrow_Venom</texPath>
