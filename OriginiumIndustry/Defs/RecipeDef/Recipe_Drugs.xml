<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
    <RecipeDef ParentName="AKI_Recipe_DrugsBase">        <!--配方-->
        <defName>AKI_Recipe_BlendedBeerI</defName>
        <label>灌装化合啤酒</label>
        <description>用神奇的化学，就能生产出这种除了水以外最受欢迎的饮料。</description>
        <jobString>正在灌装化合啤酒。</jobString>
        <workAmount>1200</workAmount>        <!--工作量-->
        <ingredients>            <!--配料表-->
            <li>
                <filter>
                    <thingDefs>
                        <li>Wort</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>2</count>                <!--需求数量-->
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>AKI_Item_Isobutanol</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>1</count>                <!--需求数量-->
            </li>
        </ingredients>
        <fixedIngredientFilter>            <!--固定成分过滤器-->
            <thingDefs>
                <li>Wort</li>
                <li>AKI_Item_Isobutanol</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>            <!--产品-->
            <AKI_Item_BlendedBeer>1</AKI_Item_BlendedBeer>            <!--产品数量-->
        </products>
    </RecipeDef>

