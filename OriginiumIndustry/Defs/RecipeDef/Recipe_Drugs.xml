    <RecipeDef ParentName="AKI_Recipe_DrugsBase">
        <defName>AKI_Recipe_IsobutanolI</defName>
        <label>提炼异醇</label>
        <description>用一点点化学知识，就能从物质中提炼出工业用的异醇，可以用来制酒，也可以用来消毒。</description>
        <jobString>正在提炼异醇。</jobString>
        <workAmount>2700</workAmount>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Neutroamine</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Chemfuel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>AKI_Item_OriginiumRefineIII</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Neutroamine</li>
                <li>Chemfuel</li>
                <li>AKI_Item_OriginiumRefineIII</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <AKI_Item_Isobutanol>1</AKI_Item_Isobutanol>
        </products>
        <skillRequirements>
            <Intellectual>8</Intellectual>
        </skillRequirements>
        <researchPrerequisite>AKI_Research_ChemicalExtract</researchPrerequisite>
    </RecipeDef>

