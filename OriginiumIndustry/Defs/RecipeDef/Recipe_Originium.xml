<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef Name="AKI_Recipe_OriginiumRefineBase">
        <defName>AKI_Recipe_OriginiumRefineBase</defName>
        <label>源石配方基础</label>
        <workSpeedStat>SmeltingSpeed</workSpeedStat>        <!--工作速度统计-->
        <effectWorking>Smelt</effectWorking>        <!--工作影响-->
        <soundWorking>Recipe_Smelt</soundWorking>        <!--工作音效-->
        <targetCountAdjustment>1</targetCountAdjustment>        <!--目标计数调整-->
    </RecipeDef>

    <RecipeDef ParentName="AKI_Recipe_OriginiumRefineBase">        <!--配方-->
        <defName>AKI_Recipe_OriginiumRefineI</defName>
        <label>初步提炼源石</label>
        <description>运用简单的方法提炼源石，只能提炼出一些纯度很低的产品。</description>
        <jobString>正在初步提炼源石。</jobString>
        <workAmount>900</workAmount>        <!--工作量-->
        <ingredients>            <!--配料表-->
            <li>
                <filter>
                    <thingDefs>
                        <li>AKI_Item_OriginiumRefineI</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>15</count>                <!--需求数量-->
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>WoodLog</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>            <!--过滤器-->
            <thingDefs>
                <li>AKI_Item_OriginiumRefineI</li>
                <li>WoodLog</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>            <!--产品-->
            <AKI_Item_OriginiumRefineII>10</AKI_Item_OriginiumRefineII>            <!--产品数量-->
        </products>
        <skillRequirements>
            <Crafting>4</Crafting>
        </skillRequirements>
        <researchPrerequisite>AKI_Research_BlastFurnaceSmelt</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="AKI_Recipe_OriginiumRefineBase">        <!--配方-->
        <defName>AKI_Recipe_OriginiumRefineII</defName>
        <label>精炼源石</label>
        <description>用工业化的标准流程提炼高纯度的源石，速度，效率和产出都有了大幅度提升</description>
        <jobString>正在精炼源石。</jobString>
        <workAmount>1200</workAmount>        <!--工作量-->
        <ingredients>            <!--配料表-->
            <li>
                <filter>
                    <thingDefs>
                        <li>AKI_Item_OriginiumRefineII</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>10</count>                <!--需求数量-->
            </li>
        </ingredients>
        <fixedIngredientFilter>            <!--过滤器-->
            <thingDefs>
                <li>AKI_Item_OriginiumRefineII</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>            <!--产品-->
            <AKI_Item_OriginiumRefineIII>2</AKI_Item_OriginiumRefineIII>            <!--产品数量-->
        </products>
        <skillRequirements>
            <Crafting>6</Crafting>
        </skillRequirements>
        <researchPrerequisite>AKI_Research_ChemicalAnalysis</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="AKI_Recipe_OriginiumRefineBase">        <!--配方-->
        <defName>AKI_Recipe_OriginiumRefineIII</defName>
        <label>至纯源石提炼</label>
        <description>通过高能反应提炼出纯度无限接近于100%的源石，虽然有了最先进的提炼设备，提炼至纯源石的过程依旧是复杂的。</description>
        <jobString>正在提炼至纯源石。</jobString>
        <workAmount>18000</workAmount>        <!--工作量-->
        <ingredients>            <!--配料表-->
            <li>
                <filter>
                    <thingDefs>
                        <li>AKI_Item_OriginiumRefineIII</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>40</count>                <!--需求数量-->
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Uranium</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>5</count>                <!--需求数量-->
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>                        <!--需求物-->
                    </thingDefs>
                </filter>
                <count>10</count>                <!--需求数量-->
            </li>
        </ingredients>
        <fixedIngredientFilter>            <!--过滤器-->
            <thingDefs>
                <li>AKI_Item_OriginiumRefineIII</li>
                <li>Uranium</li>
                <li>Plasteel</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>            <!--产品-->
            <AKI_Item_OriginiumRefineIV>1</AKI_Item_OriginiumRefineIV>            <!--产品数量-->
        </products>
        <skillRequirements>
            <Crafting>12</Crafting>
        </skillRequirements>
        <researchPrerequisite>AKI_Research_PrecisionRefine</researchPrerequisite>
    </RecipeDef>

</Defs>