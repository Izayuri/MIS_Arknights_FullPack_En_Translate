<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AKI_Building_MedicBase">
        <defName>AKI_Building_MedicI</defName>
        <label>药物配装台</label>
        <description>具有多种功能，可以制作现代能见到的所有药物的制作台，使用时请注意不要随意的把废液混合。</description>
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <texPath>Things/Building/MedicI</texPath>
            <drawSize>(4,4)</drawSize>
        </graphicData>
        <pathCost>100</pathCost>
        <statBases>
            <MaxHitPoints>140</MaxHitPoints>
            <WorkToBuild>24000</WorkToBuild>
            <Flammability>1</Flammability>
            <Mass>3</Mass>
            <Beauty>-15</Beauty>
        </statBases>
        <size>(4,3)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
        </building>
        <costList>
            <Steel>200</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
            <AKI_Item_Oriron>20</AKI_Item_Oriron>
            <Plasteel>15</Plasteel>
        </costList>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,1,-2)</interactionCellOffset>
        <researchPrerequisites>
            <li>AKI_Research_ChemicalExtract</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
    </ThingDef>

    <ThingDef ParentName="AKI_Building_MedicBase">
        <defName>AKI_Building_PurifyPod</defName>
        <label>消毒舱</label>
        <description>全封闭式的消毒舱，清洁身上的粉尘和液体在源石环境工作结束后是重中之重。</description>
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <texPath>Things/Building/PurifyPod</texPath>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <statBases>
            <MaxHitPoints>180</MaxHitPoints>
            <WorkToBuild>72000</WorkToBuild>
            <Flammability>0.5</Flammability>
            <Beauty>-5</Beauty>
        </statBases>
        <size>(1,2)</size>
        <pathCost>60</pathCost>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <building>
            <destroySound>BuildingDestroyed_Metal_Small</destroySound>
        </building>
        <costList>
            <Steel>10</Steel>
            <Plasteel>20</Plasteel>
            <ComponentIndustrial>3</ComponentIndustrial>
            <Cloth>40</Cloth>
        </costList>
        <hasInteractionCell>false</hasInteractionCell>
        <researchPrerequisites>
            <li>AKI_Research_DisasterProtection</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>200</basePowerConsumption>
            </li>
            <li Class="AK_Industry.TCP_PurifyPod">
                <thoughtComplete>AKI_Thought_UsedPurifyPod</thoughtComplete>
                <thoughtInterrupted>AKI_Thought_UsePurifyPodInterrupted</thoughtInterrupted>
            </li>
        </comps>
        <interactionCellOffset>(0,0,1)</interactionCellOffset>
    </ThingDef>

    <ThoughtDef>
        <defName>AKI_Thought_UsedPurifyPod</defName>
        <durationDays>0.083</durationDays>
        <stages>
            <li>
                <label>一尘不染</label>
                <description>洗完澡，一身轻松</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
        <replaceThoughts>
            <li>AKI_Thought_CleaningKit</li>
            <li>AKI_Thought_CleaningKitFloral</li>
            <li>AKI_Thought_UsePurifyPodInterrupted</li>
        </replaceThoughts>
    </ThoughtDef>

    <ThoughtDef>
        <defName>AKI_Thought_UsePurifyPodInterrupted</defName>
        <durationDays>1</durationDays>
        <stages>
            <li>
                <label>洗澡被打断</label>
                <description>我头上的泡沫都没冲干净！</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>