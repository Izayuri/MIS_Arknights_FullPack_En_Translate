<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RockBase">
    <defName>OriginiumOre</defName>
    <label>源石矿</label>
    <description>低浓度的源石矿石，在漫长的沉淀和地质活动中已经趋于稳定，但是在开采时依旧会释放出一些源石粉尘。</description>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <MaxHitPoints>1200</MaxHitPoints>
      <Beauty>-20</Beauty>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>      <!-- 是否资源石块 -->
      <mineableThing>OriginiumCoarseOre</mineableThing>      <!-- 产物 -->
      <mineableYield>40</mineableYield>      <!-- 开采量 -->
      <mineableScatterCommonality>1</mineableScatterCommonality>      <!-- 刷矿时的稀有度 -->
      <mineableScatterLumpSizeRange>30~40</mineableScatterLumpSizeRange>      <!-- 可开采分散团块尺寸范围 -->
    </building>
  </ThingDef>

</Defs>