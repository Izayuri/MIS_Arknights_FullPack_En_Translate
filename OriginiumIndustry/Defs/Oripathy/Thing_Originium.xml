<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
  <ThingDef ParentName="RockBase">
    <defName>AKI_ORG_Mineable</defName>
    <label>源石矿脉</label>
    <description>低浓度的源石矿石，在漫长的沉淀和地质活动中已经趋于稳定，但是依旧会释放出一些源石粉尘。</description>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>Things/Originium/ORG_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(255,255,255)</color>
      <colorTwo>(155,133,107)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>AKI_Item_OriginiumCoarseOre</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>1</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>30~40</mineableScatterLumpSizeRange>
    </building>
	<comps>
      <li Class="AK_Industry.TCP_GasEmitter">
		<gasType>AKI_Gas_OrgDust</gasType>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef Name="BaseGas" Abstract="True">
    <thingClass>AK_Industry.Gas</thingClass>
    <label>gas</label>
    <category>Gas</category>
    <altitudeLayer>Gas</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <tickerType>Normal</tickerType>
    <graphicData>
      <graphicClass>Graphic_Gas</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
  </ThingDef>
  
  <ThingDef Class="AK_Industry.GasDef" ParentName="BaseGas">
    <defName>AKI_Gas_OrgDust</defName>
    <label>源石尘</label>
    <graphicData>
      <texPath>Things/Gas/Puff</texPath>
      <drawSize>2.5</drawSize>
      <color>(1,0.92,0.016,0.2)</color>
    </graphicData>
	<addHediff>AKI_Hediff_OrgDust</addHediff>
	<hediffAddChance>1.0</hediffAddChance>
    <hediffSeverity>100</hediffSeverity>    
	<gas>
      <expireSeconds>
        <min>300</min>
        <max>300</max>
      </expireSeconds>
      <rotationSpeed>10</rotationSpeed>
    </gas>
  </ThingDef>
  
</Defs>