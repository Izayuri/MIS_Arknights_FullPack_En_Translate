<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- 观察人类尸体 -->

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThoughtDefs/Thoughts_Mermory_Misc[defName="ObservedLayingCorpse"]/nullifyingTraits/</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThoughtDefs/Thoughts_Mermory_Misc[defName="ObservedLayingCorpse"]/nullifyingTraits/</xpath>
			<value>
				<li>AK_Trait_Surtr</li>
			</value>
		</match>
	</Operation>

	<!-- 黑暗的环境 -->

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThoughtDefs/Thoughts_Situation_General[defName="EnvironmentDark"]/nullifyingTraits/</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThoughtDefs/Thoughts_Situation_General[defName="EnvironmentDark"]/nullifyingTraits/</xpath>
			<value>
				<li>AK_Trait_Ray</li>
			</value>
		</match>
	</Operation>

</Patch>