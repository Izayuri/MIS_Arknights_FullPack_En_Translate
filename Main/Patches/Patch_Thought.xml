	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThoughtDef[defName="ObservedLayingCorpse"]/nullifyingTraits</xpath>
		<value>
			<li>AK_Trait_Surtr</li>
			<li>AK_Trait_MaynarSecond</li>
			<li>AK_Trait_SkadiSecond</li>
			<li>AK_Trait_UlpianusThird</li>
		</value>
	</Operation>
	
	<!-- 黑暗的环境 -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThoughtDef[defName="EnvironmentDark"]/nullifyingTraits</xpath>
		<value>
			<li>AK_Trait_Ray</li>
			<li>AK_Trait_MaynarSecond</li>
			<li>AK_Trait_Closure</li>
		</value>
	</Operation>

	<!-- 睡觉时被打扰 -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThoughtDef[defName="SleepDisturbed"]</xpath>
		<value>
			<nullifyingTraits>
				<li>AK_Trait_EyjafjallaHvitAskaSecond</li>
				<li>AK_Trait_Closure</li>
