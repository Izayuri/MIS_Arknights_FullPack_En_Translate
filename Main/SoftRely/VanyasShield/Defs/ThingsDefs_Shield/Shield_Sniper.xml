<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="AK_BeltBase">
        <defName>AK_ShieldBelt_Wisadel</defName>
        <label>死魂灵的余息</label>
        <description>要是还没人管这扇门，我就自己来修了啊。喂，死魂灵，出来干活。</description>
        <statBases>
            <EnergyShieldRechargeRate>0.2</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>2</EnergyShieldEnergyMax>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Sniper/ShieldBeltWisadel</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="VanyaMod.CompProperties_VanyaUniversalShieldBelt">
                <startingTicksToReset>3600</startingTicksToReset>
                <energyOnReset>0.2</energyOnReset>
                <energyLossPerDamage>0.01</energyLossPerDamage>
                <canAbsorbMeleeDamage>true</canAbsorbMeleeDamage>
                <meleeAbsorbFactor>2</meleeAbsorbFactor>
                <rangedAbsorbFactor>1</rangedAbsorbFactor>
                <canDodge>true</canDodge>
                <dodgeChanceFactor>0.1</dodgeChanceFactor>
                <breakWithSmoke>true</breakWithSmoke>
                <canForceActive>true</canForceActive>
                <fireFoamBurster>true</fireFoamBurster>
                <versionInfo>Wisadel-Shield</versionInfo>
                <alias>维什戴尔的护盾</alias>
            </li>
            <li Class="AKE_VanyaShield.TCP_VanyaShieldExtension">
                <hideVanillaBubble>true</hideVanillaBubble>
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Sniper/ShieldBeltWisadelS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                    <drawOffsetNorth>(0,0.1,0)</drawOffsetNorth>
                </bubbleStaticOverlay>
                <bubbleRotateTexPath>Things/ShieldBelt/Sniper/ShieldBeltWisadelD</bubbleRotateTexPath>
            </li>
			<li Class="AKE_VanyaShield.TCP_AddHediffWhileShieldActive">
				<hediff>AK_Hediff_Camouflage</hediff>
			</li>
        </comps>
    </ThingDef>

