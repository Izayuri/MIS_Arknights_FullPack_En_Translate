<Defs>

    <ThingDef ParentName="AK_BeltBase">
        <defName>AK_ShieldBelt_Gravel</defName>
        <label>鼠群</label>
        <description>鼠群啊，聚集起来吧！</description>
        <statBases>
            <EnergyShieldRechargeRate>0.4</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>1.2</EnergyShieldEnergyMax>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Specialist/ShieldBeltGravelS</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="VanyaMod.CompProperties_VanyaUniversalShieldBelt">
                <startingTicksToReset>2400</startingTicksToReset>
                <energyOnReset>0.2</energyOnReset>
                <energyLossPerDamage>0.015</energyLossPerDamage>
                <canAbsorbMeleeDamage>true</canAbsorbMeleeDamage>
                <meleeAbsorbFactor>1</meleeAbsorbFactor>
                <rangedAbsorbFactor>2</rangedAbsorbFactor>
                <canDodge>true</canDodge>
                <dodgeChanceFactor>0.3</dodgeChanceFactor>
                <breakWithSmoke>false</breakWithSmoke>
                <canForceActive>true</canForceActive>
                <fireFoamBurster>false</fireFoamBurster>
                <versionInfo>Gravel-Shield</versionInfo>
                <alias>砾的护盾</alias>
            </li>
            <li Class="AKE_VanyaShield.TCP_VanyaShieldExtension">
                <hideVanillaBubble>true</hideVanillaBubble>
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Specialist/ShieldBeltGravelS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                </bubbleStaticOverlay>
            </li>
        </comps>
    </ThingDef>

