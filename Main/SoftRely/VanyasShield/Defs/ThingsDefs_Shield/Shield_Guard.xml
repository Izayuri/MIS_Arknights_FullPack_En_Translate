<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="AK_BeltBase">
        <defName>AK_ShieldBelt_Nearl</defName>
        <label>长夜临光</label>
        <description>职位与头衔不过是虚名，临光家的骑士从不需要他人的认可来指引自己的道路......即使在如今的卡西米尔，每一条道路都没入黑暗。</description>
        <statBases>
            <EnergyShieldRechargeRate>0.2</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>2.4</EnergyShieldEnergyMax>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Guard/ShieldBeltNearlS</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="VanyaMod.CompProperties_VanyaUniversalShieldBelt">
                <startingTicksToReset>3600</startingTicksToReset>
                <energyOnReset>0.2</energyOnReset>
                <energyLossPerDamage>0.01</energyLossPerDamage>
                <canAbsorbMeleeDamage>true</canAbsorbMeleeDamage>
                <meleeAbsorbFactor>1</meleeAbsorbFactor>
                <rangedAbsorbFactor>2</rangedAbsorbFactor>
                <canDodge>true</canDodge>
                <breakWithSmoke>false</breakWithSmoke>
                <canForceActive>false</canForceActive>
                <fireFoamBurster>false</fireFoamBurster>
                <versionInfo>Nearl-Shield</versionInfo>
                <alias>临光家族的护盾</alias>
            </li>
            <li Class="AKE_VanyaShield.TCP_VanyaShieldExtension">
                <hideVanillaBubble>true</hideVanillaBubble>
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Guard/ShieldBeltNearlS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                    <shaderType>TransparentPostLight</shaderType>
                </bubbleStaticOverlay>
                <reflectionRatio>0.1</reflectionRatio>
            </li>
        </comps>
    </ThingDef>

