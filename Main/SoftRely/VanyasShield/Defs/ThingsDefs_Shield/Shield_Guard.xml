        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Guard/ShieldBeltViviana</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="VanyaMod.CompProperties_VanyaUniversalShieldBelt">
                <startingTicksToReset>1800</startingTicksToReset>
                <energyOnReset>1</energyOnReset>
                <energyLossPerDamage>0.015</energyLossPerDamage>
                <canAbsorbMeleeDamage>true</canAbsorbMeleeDamage>
                <meleeAbsorbFactor>1</meleeAbsorbFactor>
                <rangedAbsorbFactor>2</rangedAbsorbFactor>
                <canDodge>false</canDodge>
