<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="AK_BeltBase">
        <defName>AK_ShieldBelt_Muelsyse</defName>
        <label>水之形</label>
        <description>你看着她惊讶，木讷，不知所措，然后握住了你的手。她在邀请你，她渴望与你分享大地。</description>
        <statBases>
            <EnergyShieldRechargeRate>0.4</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>1.6</EnergyShieldEnergyMax>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Vanguard/ShieldBeltMuelsyse</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="VanyaMod.CompProperties_VanyaUniversalShieldBelt">
                <startingTicksToReset>3600</startingTicksToReset>
                <energyOnReset>0.2</energyOnReset>
                <energyLossPerDamage>0.01</energyLossPerDamage>
                <canAbsorbMeleeDamage>true</canAbsorbMeleeDamage>
                <meleeAbsorbFactor>2</meleeAbsorbFactor>
                <rangedAbsorbFactor>1</rangedAbsorbFactor>
                <canDodge>true</canDodge>
                <dodgeChanceFactor>0.2</dodgeChanceFactor>
                <breakWithSmoke>true</breakWithSmoke>
                <canForceActive>false</canForceActive>
                <fireFoamBurster>true</fireFoamBurster>
                <versionInfo>Muelsyse-Shield</versionInfo>
                <alias>缪尔赛思的护盾</alias>
            </li>
            <li Class="AKE_VanyaShield.TCP_VanyaShieldExtension">
                <hideVanillaBubble>true</hideVanillaBubble>
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Vanguard/ShieldBeltMuelsyseS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                    <drawOffsetNorth>(0,0.1,0)</drawOffsetNorth>
                </bubbleStaticOverlay>
                <bubbleRotateTexPath>Things/ShieldBelt/Vanguard/ShieldBeltMuelsyseD</bubbleRotateTexPath>
            </li>
        </comps>
    </ThingDef>

