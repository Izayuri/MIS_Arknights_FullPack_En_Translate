	<!-- 泥岩 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Mudrock</defName>
		<requiredTraits>
			<li>AK_Trait_Mudrock</li>
		</requiredTraits>
		<stages>
			<li>
				<label>沃土磐石之友</label>
				<description>或许是特殊的源石技艺，泥岩对于泥土有着一种奇妙的情感。
她和泥土之间的关系可能比她和大部分人都要亲密得多。
				</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 年 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_NianSecond</defName>
		<requiredTraits>
			<li>AK_Trait_NianSecond</li>
		</requiredTraits>
		<stages>
			<li>
				<label>肆无忌惮</label>
				<description>"'没有干扰他人工作的习惯'？她劝诱别人上班打麻将，有没有人阻止一下？"</description>
				<baseMoodEffect>20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 星熊 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Hoshiguma</defName>
		<requiredTraits>
			<li>AK_Trait_Hoshiguma</li>
		</requiredTraits>
		<stages>
			<li>
				<label>冷静的鬼</label>
				<description>从她的言行举止中，能感受到思考，在她的骁勇善战中，能感受到克制。
				</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

