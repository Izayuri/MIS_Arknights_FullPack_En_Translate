<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Sniper -->	<!-- 已排序 -->

	<!-- 早露 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Rosa</defName>
		<requiredTraits>
			<li>AK_Trait_RosaSecond</li>
		</requiredTraits>
		<stages>
			<li>
				<label>前路迷茫</label>
				<description>“没事的，经历了那样的事情后，对我来说，所谓贵族的体面，已经最无所谓的东西了。我现在只是和凛冬她们一样，受到保护的普通学生而已。”</description>
				<baseMoodEffect>-14</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- W -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_W</defName>
		<requiredTraits>
			<li>AK_Trait_W</li>
		</requiredTraits>
		<stages>
			<li>
				<label>索然无味</label>
				<description>嗯，又是美好的一天。</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 陨星 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Meteorite</defName>
		<requiredTraits>
			<li>AK_Trait_Meteorite</li>
		</requiredTraits>
		<stages>
			<li>
				<label>独特的萨卡兹</label>
				<description>愿萨卡兹再无苦难</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 松果 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Pinecone</defName>
		<requiredTraits>
			<li>AK_Trait_Pinecone</li>
		</requiredTraits>
		<stages>
			<li>
				<label>安于现状</label>
				<description>想做的事情啊......有份稳定的工作，踏踏实实过日子就行了呗。</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 守林人 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Firewatch</defName>
		<requiredTraits>
			<li>AK_Trait_Firewatch</li>
		</requiredTraits>
		<stages>
			<li>
				<label>唯余复仇</label>
				<description>即使牺牲我的生命，也一定要完成这次复仇。</description>
				<baseMoodEffect>-25</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 远牙 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Fartooth</defName>
		<requiredTraits>
			<li>AK_Trait_Fartooth</li>
		</requiredTraits>
		<stages>
			<li>
				<label>翔隼</label>
				<description>即使被金钱暂时埋没，卡西米尔的精神却从未远去，它们等待着再次现身，在天空中翱翔。</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_FartoothSecond</defName>
		<requiredTraits>
			<li>AK_Trait_FartoothSecond</li>
		</requiredTraits>
		<stages>
			<li>
				<label>风息</label>
				<description>远牙的思维像风一样迅速又自由，或许她也会在风中闻到家乡的气息。</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 菲亚梅塔 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
		<defName>AK_Thought_Trait_Fiammetta</defName>
		<requiredTraits>
			<li>AK_Trait_Fiammetta</li>
		</requiredTraits>
		<stages>
			<li>
				<label>陈述苦难</label>
				<description>我去过很多国家，不是没有比拉特兰更打动我的地方，但现在我很清楚自己要的是什么。这座拉特兰城，任何人都别想伤害它。</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- 能天使 -->

	<ThoughtDef ParentName = "AK_Thought_Permanent">
