<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Name="AK_CombatRecord" Abstract="True">
        <thingClass>ThingWithComps</thingClass>
        <selectable>true</selectable>
        <graphicData>
			<texPath>Things/Expcard/JuniorCombatRecord</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
        <drawerType>MapMeshOnly</drawerType>
        <statBases>
            <MarketValue>250</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.1</Mass>
			<Flammability>0</Flammability>
            <DeteriorationRate>0</DeteriorationRate>
        </statBases>
        <techLevel>Spacer</techLevel>
        <altitudeLayer>Item</altitudeLayer>
        <stackLimit>1</stackLimit>
        <thingCategories>
            <li>CombatRecord</li>
        </thingCategories>
        <alwaysHaulable>true</alwaysHaulable>
        <forceDebugSpawnable>true</forceDebugSpawnable>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Usable">
				<useJob>UseItem</useJob>
				<useLabel>Cleaning self</useLabel>
				<useDuration>300</useDuration>
			</li>
            <li Class="CompProperties_UseEffectDestroySelf" />
        </comps>
    </ThingDef>

	<ThingDef ParentName="AK_CombatRecord">
		<defName>AK_Item_JuniorCombatRecord_Animals</defName>
		<label>初级作战记录</label>
        <comps>
            <li Class="AKE_OperatorExtension.TCP_UseEffect_CombatRecord">
			</li>
        </comps>
	</ThingDef>

</Defs>