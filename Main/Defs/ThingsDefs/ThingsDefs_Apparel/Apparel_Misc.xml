<?xml version="1.0" encoding="utf-8"?>
<Defs>

<ThingDef ParentName="AK_ArmorBase">
    <defName>AK_Apparel_Doctor</defName>
	<label>博士衣服</label>
    <description>博士的衣服。</description>
    <useHitPoints>true</useHitPoints>
    <equippedStatOffsets>
      <PsychicSensitivity>0.05</PsychicSensitivity>
      <PsychicEntropyRecoveryRate>0.033</PsychicEntropyRecoveryRate>
      <ResearchSpeed>2</ResearchSpeed>
    </equippedStatOffsets>
    <costList>
      <Gold>18</Gold>
      <Plasteel>190</Plasteel>
    </costList>
    <graphicData>
      <texPath>Things/AK_Agents/Misc/Doctor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/AK_Agents/Misc/Doctor</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <tradeTags>
      <li>Armor</li>
      <li>HiTechArmor</li>
    </tradeTags>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <displayPriority>165</displayPriority>
      <unfinishedThingDef>AK_Unfinished_DoctorCloth</unfinishedThingDef>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="false">
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <uiIconScale>1.25</uiIconScale>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>150000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <Mass>15</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.2</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Heat>0.6</ArmorRating_Heat>
      <Insulation_Cold>36</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>17</EquipDelay>
    </statBases>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(1.0,1.0,1.0)</only>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="UnfinishedBase">
    <defName>AK_Unfinished_DoctorCloth</defName>
    <label>博士衣物（未完成）</label>
    <description>未完成的博士的衣物。</description>
    <statBases>
      <Flammability>0.4</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/AK_Agents/Misc/Doctor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

</Defs>