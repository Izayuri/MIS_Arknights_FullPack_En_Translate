      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <tradeTags>
      <li>Armor</li>
      <li>HiTechArmor</li>
    </tradeTags>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <displayPriority>165</displayPriority>
